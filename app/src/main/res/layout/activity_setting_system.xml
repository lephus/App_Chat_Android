<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/setting" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="CHỌN USER ĐỂ CÀI ĐẶT"
        android:layout_weight="1"
        />
    <ListView
        android:background="#ffccff"
        android:id="@+id/listuer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="THÊM USER VÀO HỆ THỐNG"
        android:layout_weight="1"
        />
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:hint="User name..."
        android:layout_weight="1"
        android:layout_height="0dp"
        />
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:hint="Password..."
        android:layout_weight="1"
        android:layout_height="0dp"
        />
    <EditText
        android:id="@+id/fullname"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:hint="fullname..."
        android:layout_weight="1"
        android:layout_height="0dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="0dp">
        <CheckBox
            android:id="@+id/checkNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            />
        <CheckBox
            android:id="@+id/checkNu"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            />
        <CheckBox
            android:id="@+id/checkAdmin"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Là Admin"
            />
    </LinearLayout>
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/address"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="address..."
    />
    <Button
        android:id="@+id/btsubmit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#66ff66"
        android:layout_width="match_parent"
        android:text="SUBMIT"
        android:layout_weight="1"
        android:layout_height="0dp"/>
</LinearLayout>